<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outletdetails">

    <ImageView
        android:id="@+id/left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        app:tint="@android:color/black"
        android:src="@drawable/line_left" />

    <TextView
        android:id="@+id/deskoutlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outlet Details"
        android:textColor="#1A4E6F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/left"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toTopOf="@+id/left" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/deskoutlet"
        android:layout_above="@id/bottomLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/left"
        android:layout_width="410dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/loc1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/left"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/open"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="#5EE5BC"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Open"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/open"
                android:background="#8E97AA" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:textColor="#898B96"
                android:text="View Outlet Info Details"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height=""
                android:layout_below="@id/text2"
                android:layout_marginTop="5dp"
                android:background="#8E97AA" />
        </LinearLayout>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Den Gebol"
            android:layout_marginTop="380dp"
            android:layout_below="@id/text2"
            android:layout_marginStart="10dp"
            android:textColor="#0E0E0E"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/left"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                android:textColor="#898B96"
                android:text="2 KM"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/text5"
                android:background="#8E97AA" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginStart="8dp"
                android:textColor="#898B96"
                android:text="Krapyak, Bantul, Yogyakarta"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="440dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:src="@drawable/line" />

            <ImageView
                android:id="@+id/mone"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:src="@drawable/mone" />

            <TextView
                android:id="@+id/strm"
                android:layout_width="62dp"
                android:layout_height="14dp"
                android:text="start from"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/mon"
                android:layout_width="59dp"
                android:layout_height="18dp"
                android:layout_marginBottom="88dp"
                android:text="5.000"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/dok"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:src="@drawable/doc" />

            <TextView
                android:id="@+id/trm"
                android:layout_width="62dp"
                android:layout_height="14dp"
                android:text="Transaction"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/doks"
                android:layout_width="59dp"
                android:layout_height="18dp"
                android:layout_marginBottom="88dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/str"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/str" />

            <TextView
                android:id="@+id/srm"
                android:layout_width="62dp"
                android:layout_height="14dp"
                android:text="Rating"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/mo"
                android:layout_width="61dp"
                android:layout_height="18dp"
                android:layout_marginBottom="88dp"
                android:text="4,5(1)"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="19dp"
            android:background="#8E97AA" />

    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>